doctype html
html(lang='en')
  include ../common/head.pug
  +head("Freeza - Your Fridge")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Inside your fridge
            table.table
              thead
                tr
                  th(scope="col") Ingredients
                  th(scope="col") Left
                  th(scope="col")
                tr
              tbody                
                for device in devices
                  tr(id=lead.id)
                    td
                      span #{device.type}
                    td
                      span #{device.weight}
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')
