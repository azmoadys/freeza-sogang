doctype html
html(lang='en')
  include ../common/head.pug
  +head("Freeza - Your Fridge")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1 Inside your fridge
            table.table
              thead
                tr
                  th(scole="col") Device ID
                  th(scole="col") Type
                  th(scope="col") Weight
                  th(scope="col") Analysis
                tr
              tbody                
                for device in devices
                  tr(id=device.id)
                    td
                      span #{device.id}
                    td
                      span #{device.type}
                    td
                      span #{device.weight}
                    td
                      a(href="/device/" + device.id) history
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')
