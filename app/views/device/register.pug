doctype html
html(lang='en')
  include ../common/head.pug
  +head("Freeza - Register")
  body
    header
      include ../common/navbar.pug
      +navbar(user)
      .container
        .row.align-items-center
          .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
            h1.mb-3 Register
            p Please enter your device's properties.

            form(action="/register_sensor", method="POST")
              div.form-group
                label(for='SID') SID:
                input#SID.form-control(type='integer', placeholder='Enter your SID', name='SID')

              div.form-group
                label(for='TYPE') Ingredient:
                input#SID.form-control(type='text', placeholder='Enter ingredient', name='TYPE')

              button.btn.btn-primary(type='submit') Register

    include ../common/footer.pug
    +footer()
